<UserControl x:Class="PracticaAreas.ControlAreaTrapecio"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:PracticaAreas"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <StackPanel Background="White">
        <StackPanel Margin="0,0,18,15">
            <TextBlock FontSize="19"><Run Text="Trapecio:"/></TextBlock>
            <StackPanel Orientation="Horizontal">
                <TextBlock><Run Text="base mayor:"/></TextBlock>
                <TextBlock Margin="114,0,0,0"><Run Text="base menor:"/></TextBlock>
            </StackPanel>
            <StackPanel Orientation="Horizontal">
                <TextBox x:Name="tbxBaseMT" Width="120" HorizontalAlignment="Left"/>
                <TextBox x:Name="tbxBaseMrT" Width="120" HorizontalAlignment="Left" Margin="58,0,0,0"/>
            </StackPanel>
            <TextBlock Margin="0,10,0,0"><Run Text="altura:"/></TextBlock>
            <TextBox x:Name="tbxAlturaTra" Width="120" HorizontalAlignment="Left"/>
        </StackPanel>

    </StackPanel>
</UserControl>

<UserControl x:Class="PracticaAreas.ControlAreaRectangulo"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:PracticaAreas"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <StackPanel Background="White">
        <TextBlock FontSize="19" Margin="0,0,18,0"><Run Text="Rectangulo:"/></TextBlock>
        <StackPanel Orientation="Horizontal" Margin="0,0,18,0">
            <TextBlock><Run Text="base:"/></TextBlock>
            <TextBlock Margin="150,0,0,0"><Run Text="altura:"/></TextBlock>
        </StackPanel>
        <StackPanel Orientation="Horizontal" Margin="0,0,18,0">
            <TextBox x:Name="tbxBaseR" Width="120" HorizontalAlignment="Left"/>
            <TextBox x:Name="tbxAlturaR" Width="120" HorizontalAlignment="Left" Margin="58,0,0,0"/>
        </StackPanel>
    </StackPanel>
</UserControl>
